<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/beverage_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Beverage Name" />

    <EditText
        android:id="@+id/beverage_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Beverage Price"
        android:inputType="number" />

    <EditText
        android:id="@+id/beverage_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Beverage Description" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Beverage" />

</LinearLayout>